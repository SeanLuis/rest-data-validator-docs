{
  "name": "@vue/theme",
  "version": "2.2.5",
  "description": "The VitePress theme for vuejs.org.",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./config": {
      "types": "./src/vitepress/config/baseConfig.d.ts",
      "default": "./src/vitepress/config/baseConfig.js"
    }
  },
  "files": [
    "src",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/theme.git"
  },
  "keywords": [
    "vue",
    "design-system"
  ],
  "author": "Evan You",
  "license": "MIT",
  "homepage": "https://theme.vuejs.org",
  "bugs": {
    "url": "https://github.com/vuejs/theme/issues"
  },
  "scripts": {
    "lint": "prettier --check --write --parser typescript \"{__tests__,docs,src,types}/**/*.ts\"",
    "lint:fail": "prettier --check --parser typescript \"{__tests__,docs,src,types}/**/*.ts\"",
    "type": "tsc --noEmit",
    "test": "npm run lint && npm run type",
    "dev": "vitepress dev docs",
    "docs-build": "vitepress build docs",
    "serve": "npm run docs-build && vitepress serve docs"
  },
  "dependencies": {
    "@docsearch/css": "^3.6.1",
    "@docsearch/js": "^3.6.1",
    "@vueuse/core": "^9.13.0",
    "body-scroll-lock": "^3.1.5",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@mdit-vue/types": "^0.11.0",
    "@types/body-scroll-lock": "^3.1.2",
    "@types/estree": "^1.0.5",
    "@types/node": "^18.19.42",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5",
    "vitepress": "^1.3.1",
    "vue": "^3.4.34"
  },
  "peerDependencies": {
    "vitepress": "^1.0.0-alpha.60"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  }
}
